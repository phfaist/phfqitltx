%
% Utility: save label metadata and reload it later for use of \label{...} later
%
\def\phfsubfig@save@labeldata#1{% #1: a command to define with the relevant label data
  \protected@xdef#1{{\@currentlabel}{\@currentlabelname}{\@currentHref}}
}
\def\phfsubfig@restore@labeldata@args#1#2#3{%
  \global\def\@currentlabel{#1}%
  \global\def\@currentlabelname{#2}%
  \global\def\@currentHref{#3}%
}
\def\phfsubfig@restore@labeldata#1{% #1: the command used in argument to \phfsubfig@save@labeldata
  \expandafter\phfsubfig@restore@labeldata@args#1%
}









