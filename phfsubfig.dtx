\RequirePackage{etoolbox}


\newcommand\phfDeclareFloatSubFigures[1]{%
  \newcounter{phfsubfig@#1}[#1]%
  \expandafter\renewcommand\csname thephfsubfig@#1\endcsname{\textbf{\alph{phfsubfig@#1}}.}%
  \expandafter \apptocmd\csname #1\endcsname{%
    \phfWithSubFigs%
  }{}{\PackageError{phfsubfig}{Can't patch \string#1.}{Couldn't patch command
      \string#1 to include \string\phfWithSubFigs.}}%
}

\phfDeclareFloatSubFigures{figure}


\newcommand\phfWithSubFigs{%
  \if\relax\detokenize\expandafter{\@captype}\relax
    \PackageError{phfsubfig}{You must use \string\phfWithSubFigs
      within a float environment.}{}%
  \fi
  \ifcsname c@phfsubfig@\@captype\endcsname \else
    \PackageError{phfsubfig}{Float type \@captype\space not set up to be
      used with phfsubfig.  Please run \string\phfDeclareFloatSubFigures.}{}
  \fi
  \ifdefined\phantomsection
    \phantomsection
    % 
    \phfsubfig@save@labeldata\phfsubfig@usesubfig%
  \fi
}



