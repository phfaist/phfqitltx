%    \begin{macrocode}
  \newlist{enumerate*}{enumerate*}{1}
  \setlist[enumerate*]{
    label={(\roman*)},
    before={},
    itemjoin={{ }},
    itemjoin*={{ and }}
  }%
}
%    \end{macrocode}
% \end{environment}
% And now, check if \pkgname{enumitem} is loaded and apply the definitions.
%    \begin{macrocode}
\@ifpackageloaded{enumitem}{\phfea@setup@enumitem}{}
